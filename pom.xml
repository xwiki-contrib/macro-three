<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.contrib</groupId>
    <artifactId>parent-platform</artifactId>
    <version>12.1</version>
  </parent>

  <artifactId>macro-three</artifactId>
  <version>1.3-SNAPSHOT</version>
  <packaging>xar</packaging>
  <name>Macro Three</name>
  <description>A macro for loading and displaying 3D objects in XWiki.</description>

  <properties>
    <xwiki.extension.name>Macro Three</xwiki.extension.name>
    <xwiki.extension.category>macro</xwiki.extension.category>
    <xwiki.release.jira.skip>false</xwiki.release.jira.skip>
    <xwiki.issueManagement.jira.id>THREE</xwiki.issueManagement.jira.id>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.webjars.npm</groupId>
      <artifactId>three</artifactId>
      <version>0.121.1</version>
    </dependency>
  </dependencies>

  <developers>
    <developer>
      <id>9inpachi</id>
      <name>Fawad Ali</name>
      <email>m.fawaadali@gmail.com</email>
      <timezone>+5</timezone>
    </developer>
  </developers>

  <scm>
    <connection>scm:git:git://github.com/xwiki-contrib/macro-three.git</connection>
    <developerConnection>scm:git:git@github.com:xwiki-contrib/macro-three.git</developerConnection>
    <url>https://github.com/xwiki-contrib/macro-three</url>
    <tag>HEAD</tag>
  </scm>

  <build>
    <extensions>
      <extension>
        <groupId>org.xwiki.commons</groupId>
        <artifactId>xwiki-commons-tool-xar-handlers</artifactId>
        <version>${commons.version}</version>
      </extension>
    </extensions>
  </build>
</project>
